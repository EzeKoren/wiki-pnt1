@model Articulo
@{
    ViewData["Title"] = "Edición de artículo";
}

<h1>Edición de artículo</h1>


<form id="edicion">
    // TÍTULO
    <div class="mb-3">
        <label for="titulo" class="form-label">Titulo</label>
        <input type="text" class="form-control" id="titulo" value="@Model.titulo">
    </div>
    
    // CATEGORÍAS
    <div class="mb-3">
        <label for="titulo" class="form-label">Categorías</label>
        <input type="text" class="form-control" id="titulo" value="@string.Join(", ", Model.categorias)" aria-describedby="categorias-help">
        <div id="categorias-help" class="form-text">Separadas con coma</div>
    </div>

    // CONTENIDO
    <div class="mb-3">
        <label for="titulo" class="form-label">Contenido</label>
        <textarea class="form-control" id="titulo">@Model.contenido</textarea>
    </div>

    // IMAGEN
    <div class="mb-3">
        <label for="titulo" class="form-label">URL a la imagen</label>
        <input type="url" class="form-control" id="titulo" value="@Model.imagen">
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>