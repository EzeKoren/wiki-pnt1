@model List<Articulo>
@{
    ViewData["Title"] = "Admin index";
}

<h1>Bienvenido al dashboard de administración</h1>

<form id="buscar">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Buscar artículos">
        <button class="btn btn-outline-secondary" type="button" id="button-addon2">Buscar</button>
    </div>
</form>

<a class="btn btn-dark" asp-controller="Admin" asp-action="Crear"><b>+</b> Crear artículo</a>

<ul class="list-group">
    @foreach (var articulo in Model) {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>
                @articulo.titulo
                @foreach (var categoria in articulo.categorias)
                {
                    <span class="badge text-bg-dark">@categoria</span>
                }
            </span>
            <span>
                <a class="badge bg-primary rounded-pill">Editar</a>
                <a class="badge bg-danger rounded-pill">Eliminar</a>
            </span>
        </li>
    }
</ul>
